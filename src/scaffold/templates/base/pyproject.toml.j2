[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
requires-python = ">={{ python_version }}"
authors = [
    {name = "{{ author }}"{% if email %}, email = "{{ email }}"{% endif %}}
]
license = {text = "{{ license }}"}

dependencies = [
    "typer>=0.12.0",
    "rich>=13.0.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=8.0.0",
    "pytest-cov>=6.0.0",
    "pytest-examples>=0.0.10",
    "pytest-xdist>=3.0.0",
    "ruff>=0.3.0",
    "basedpyright>=1.10.0",
    "prek>=0.1.0",
    "vulture>=2.11",
    "bandit>=1.7.0",
    "deptry>=0.12.0",
    "cliqa>=0.1.0",
    "bump-my-version>=0.28.0",
    "zensical>=0.0.10",
]
mcp = [
    "mcp>=1.2.0",
]

[project.scripts]
{{ package_name }} = "{{ package_name }}.cli:app"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/{{ package_name }}"]

[tool.ruff]
line-length = 100
target-version = "py{{ python_version.replace('.', '') }}"

[tool.ruff.lint]
select = ["E", "F", "W", "I", "N"]

[tool.ruff.format]
quote-style = "double"

[tool.pytest.ini_options]
testpaths = ["tests"]
addopts = [
    "--cov={{ package_name }}",
    "--cov-branch",
    "--cov-report=term-missing",
    "--cov-report=html",
    "--cov-fail-under=90",
    "--strict-markers",
]
markers = [
    "unit: Fast unit tests (no subprocess, can run in parallel with -n auto)",
    "integration: Slow integration tests (subprocess, run sequentially)",
]

[tool.coverage.run]
branch = true
omit = ["*/mcp_server.py"]

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "if __name__ == .__main__.:",
    "if TYPE_CHECKING:",
]

[tool.bandit]
exclude_dirs = ["tests"]
skips = ["B101"]

[tool.basedpyright]
include = ["src/{{ package_name }}"]
typeCheckingMode = "standard"

[tool.deptry]
extend_exclude = ["tests"]

[tool.deptry.per_rule_ignores]
DEP001 = ["{{ package_name }}"]
DEP002 = ["pytest", "pytest-cov", "pytest-examples", "pytest-xdist", "ruff", "basedpyright", "prek", "vulture", "bandit", "deptry", "cliqa", "bump-my-version", "zensical"]
DEP003 = ["{{ package_name }}", "mcp"]

[tool.bumpversion]
current_version = "0.1.0"
parse = "(?P<major>\\d+)\\.(?P<minor>\\d+)\\.(?P<patch>\\d+)"
serialize = ["{major}.{minor}.{patch}"]
search = "{current_version}"
replace = "{new_version}"
regex = false
ignore_missing_version = false
tag = true
sign_tags = false
tag_name = "v{new_version}"
tag_message = "Bump version: {current_version} → {new_version}"
allow_dirty = false
commit = true
message = "Bump version: {current_version} → {new_version}"
commit_args = ""

[[tool.bumpversion.files]]
filename = "pyproject.toml"
search = "version = \"{current_version}\""
replace = "version = \"{new_version}\""

[[tool.bumpversion.files]]
filename = "src/{{ package_name }}/__init__.py"
search = "__version__ = \"{current_version}\""
replace = "__version__ = \"{new_version}\""
